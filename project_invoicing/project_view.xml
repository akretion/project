        <!-- INHERITED VIEW FOR THE OBJECT : project_task -->

        <record id="view_task_form2" model="ir.ui.view">
            <field name="name">project_invoicing.project_task.view_form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field eval="16" name="priority"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='progress']" position="after">
                        <field name="fixed_amount" />
                        <field name="product_id"/>
                        <field name="unit_price"/>
                    </xpath>
                    <page string="Extra Info" position="after">
                        <page string="Accounting">
                            <group name="varous_amount">
                                <field name="planned_amount"/>
                                <field name="invoiced_amount"/>
                            </group>
                            <separator string="Invoice Lines"/>
                            <field name="invoice_line_ids" nolabel="1"/>
                        </page>
                    </page>
                </data>
            </field>
        </record>

