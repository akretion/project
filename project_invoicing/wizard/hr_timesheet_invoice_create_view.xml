<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_hr_timesheet_invoice_create" model="ir.ui.view">
            <field name="name">hr.timesheet.project.invoice.create.form</field>
            <field name="model">hr.timesheet.project.invoice.create</field>
            <field name="arch" type="xml">
                <form string="Create Invoice" version="7.0">
                    <separator name='invoice' string='Timesheet lines have differents partners, an invoice for each partner will be created.'/>
                    <field name='invoice_id' domain="[('partner_id', '=', context.get('partner_id'))]"/>
                    <footer>
                        <button name="do_create" string="Create Invoices" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_hr_timesheet_invoice_create" model="ir.actions.act_window">
            <field name="name">Create Invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.timesheet.project.invoice.create</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="hr_timesheet_task.hr_analytic_timesheet_invoice_create_values">
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_hr_timesheet_invoice_create'))" />
        </record>

    </data>
</openerp>
