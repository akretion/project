<openerp>
    <data>
        <record id="view_project_task_invoice_create" model="ir.ui.view">
            <field name="name">project.task.invoice.create.form</field>
            <field name="model">project.task.invoice.create</field>
            <field name="arch" type="xml">
                <form string="Create Invoice" version="7.0">
                    <h1>Are you sure to create the invoice?</h1>
                    <footer>
                        <button name="do_create" string="Yes" type="object" class="oe_highlight"/>
                        or
                        <button string="No" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_project_task_invoice_create" model="ir.actions.act_window">
            <field name="name">Create Invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.task.invoice.create</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="project_task_invoice_create_values">
            <field name="model_id" ref="model_project_task" />
            <field name="name">Create Invoice</field>
            <field name="key2">client_action_multi</field>
            <field name="value" eval="'ir.actions.act_window,' + str(ref('action_project_task_invoice_create'))" />
            <field name="key">action</field>
            <field name="model">project.task</field>
        </record>
    </data>
</openerp>
