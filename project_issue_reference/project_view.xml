<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

<record id="project_issue_form_view" model="ir.ui.view">
    <field name="model">project.issue</field>
    <field name="inherit_id"
           ref="project_issue.project_issue_form_view"/>
    <field name="arch" type="xml">
        <field name="version_id" position="before">
            <field name="reference" class="oe_edit_only"/>
            <button name="goto_document" type="object" string="Go to Issue Origin"
                    class="oe_link oe_read_only" colspan="2"
                    help="Go to the window from which the issue has been defined"/>
        </field>
    </field>
</record>

<record model="ir.actions.act_window" id="project_issue_from_anywhere">
    <field name="name">Issues</field>
    <field name="res_model">project.issue</field>
    <field name="view_mode">form</field>
</record>

    </data>
</openerp>
